<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/IV_ShipmentPicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/TV_ShipmentNamee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="SHIPMENT001"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/TV_ShippingDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Shipping Date: 02/02/20"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/TV_ArivalDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Shipping Date: 02/02/20"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/TV_ShipmentCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="BDT 18000"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/TV_ShipmentDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="SHIPMENT001"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="25dp"/>


</LinearLayout>
